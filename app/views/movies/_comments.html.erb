<div class="product-reviews">
	<% @comments.each do |comment| %>
		<div id="posted-comments">
			<hr>
				<p><%= comment.user %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %> </em></small></p>
				<% if signed_in? && current_user.admin %>
					<%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, movie_comment_path(@movie, comment), method: :delete, data: { confirm: 'Are you sure?'} %>
				<% end %>
				<div class="rated" data-score="<%= comment.rating %>"></div>
				<p><%= comment.body %></p>
		</div>
	<% end %>
</div>