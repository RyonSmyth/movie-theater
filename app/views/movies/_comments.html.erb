<div class="product-reviews">
	<% @comments.each do |comment| %>
		<div id="posted-comments">
			<hr>
				<p><%= comment.user %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %> </em></small></p>
				<div class="rated" data-score="<%= comment.rating %>"></div>
				<p><%= comment.body %></p>
		</div>
	<% end %>
</div>